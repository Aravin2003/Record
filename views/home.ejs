<%-include("partials/head")%>
<title>Record</title>
<link rel="stylesheet"  href="css/home.css">
</head>
<body>
    <%-include("partials/nav")%>
    <div id="your-space">
        <a href="communityCreate"> <button id="community-create"><span class="material-symbols-outlined" id="add-community">
            add
            </span>Create Community</button></a>
            <a href="communityCreate"> <button id="post-create"><span class="material-symbols-outlined" id="add-community">
                add
                </span>Create Post</button></a>
            <div id="your-space-explain-div">
                <p id="your-space-name" class="gradient-font">Your Space</p>
                <p id="your-space-explain">Welcome to Your Space, the place thats truly you. Get personalized 
                    recommendations tailored just for you, based on your interests and preferences. 
                    With Your Space, you'll feel at home as you explore a world of content 
                    that's uniquely yours.</p>
            </div>
    </div>
    <%if(success&&success.length){%>
        <div id="success-flash">
           <% if(currentUser){ %>
            <p id="success-flash-message"> <%=success%><%=currentUser.username%>!</p>
            <% } else { %>
                <p id="success-flash-message"> <%=success%></p>
                <% } %>
           <span class="material-symbols-outlined" id="flash-close">
            close
           </span>
        </div>
        <%}%>
     <div id="community-container">
        <div id="user-communities">
            <h5 class="home-h5-community gradient-font">Your communities</h5>
        </div>
        <div id="user-recently-viewed">
            <h5 class="home-h5-community gradient-font">Recently viewed</h5>
        </div>
     </div>
     <div id="post-container">
     </div>
     <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
<lottie-player class="loading-animation" id="loading-animation" src="https://assets7.lottiefiles.com/packages/lf20_hppwydw1.json"  background="transparent" 
 speed="1"  style="width: 500px; height: 100px;"  loop  autoplay></lottie-player>
    <script src="js/home.js"></script>
</body>
</html>
